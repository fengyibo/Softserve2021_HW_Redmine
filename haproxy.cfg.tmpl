# HA Proxy configuration file template
# Please replace <IP> and <port> in "redmine_backend" section
# with appripriate values
# 
# Stats are available on proxy host, port 8888, path /ha-stats

global
	log /dev/log	local0
	log /dev/log	local1 notice
	chroot /var/lib/haproxy
	stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
	stats timeout 10s
	user haproxy
	group haproxy
	daemon

defaults
	log	global
	mode	http
	option	httplog
	option	dontlognull
	maxconn 1000
        timeout connect 5s
        timeout client  10s
        timeout server  10s
	errorfile 400 /etc/haproxy/errors/400.http
	errorfile 403 /etc/haproxy/errors/403.http
	errorfile 408 /etc/haproxy/errors/408.http
	errorfile 500 /etc/haproxy/errors/500.http
	errorfile 502 /etc/haproxy/errors/502.http
	errorfile 503 /etc/haproxy/errors/503.http
	errorfile 504 /etc/haproxy/errors/504.http

listen stats
	bind *:8888
	stats enable
	stats uri /ha-stats
	stats refresh 5s

frontend redmine_frontend
   bind *:80
   stats uri /haproxy?stats
   default_backend redmine_back

backend redmine_backend
    balance roundrobin
    option httpchk HEAD /
    server redmine0:3000 check
    server redmine1:3000 check

